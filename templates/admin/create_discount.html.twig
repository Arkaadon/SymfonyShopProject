{% extends 'base.html.twig' %}

{% block title %}Bamazon{% endblock %}

{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
      background: #F5F5F5;
      padding: 2px 6px;
    }
  </style>

  <div class="d-flex justify-content-center align-items-center flex-column">
    <h1>Gestion Administrateur Bamazon</h1>
    <h3>Vous êtes connecté en tant que
      {{ app.user.username }}</h3>

    <a href="{{ path('app_logout')}}" class="btn btn-primary mt-2">Logout</a>
    <a href="{{ path('app_homepage')}}" class="btn btn-primary mt-2">Accueil</a>
    <a href="{{ path('admin')}}" class="btn btn-primary mt-2">Page d'Administration</a>
  </div>

  <div class="d-flex justify-content-center flex-column align-items-center mt-2">
    <form class="d-flex justify-content-center flex-column align-items-center mt-2" action="{{ path('create_discount_completed') }}" method="POST" {{ stimulus_controller('admin') }} data-action="admin#onCreate">
      <label for="quantity">Code:</label>
      <input class="form-control" type="text" id="code" name="_code">
      <input type="hidden" name="_token" value="{{ csrf_token('create_discount_completed') }}"/>
      <label for="quantity">Réduction:</label>
      <input class="form-control" type="number" id="discount" name="_discount" value="0">
      <input type="hidden" name="_token" value="{{ csrf_token('create_discount_completed') }}"/>
      <label for="quantity">Nombre d'utilisation:</label>
      <input class="form-control" type="number" id="use-count" name="_use-count" value="0">
      <input type="hidden" name="_token" value="{{ csrf_token('create_discount_completed') }}"/>
      <button class="mt-2 btn btn-primary">
        Valider
      </button>
    </form>
    <a href="{{ path('discount_list') }}" class="mt-2 btn btn-primary">Retour</a>
  </div>
{% endblock %}
