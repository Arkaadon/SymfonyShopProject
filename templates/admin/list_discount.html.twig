{% extends 'base.html.twig' %}

{% block title %}Bamazon{% endblock %}

{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
      background: #F5F5F5;
      padding: 2px 6px;
    }
  </style>

  <div class="d-flex justify-content-center align-items-center flex-column">
    <h1>Gestion Administrateur Bamazon</h1>
    <h3>Vous êtes connecté en tant que
      {{ app.user.username }}</h3>

    <a href="{{ path('app_logout')}}" class="btn btn-primary mt-2">Logout</a>
    <a href="{{ path('app_homepage')}}" class="btn btn-primary mt-2">Accueil</a>
    <a href="{{ path('admin')}}" class="btn btn-primary mt-2">Page d'Administration</a>
  </div>

  <div class="d-flex flex-wrap justify-content-center align-items-center mt-2">
    {% for discount in discounts %}
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-tile">Code:
            {{ discount.discountcode }}</h5>
          <p>Réduction:
            {{discount.discount}}</p>
          <p>Nombre d'utilisation:
            {{discount.usecount}}
          </p>
          <a href="{{ path('edit_discount', {'discount': discount.id}) }}" class="btn btn-primary">Editer</a>
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="d-flex justify-content-center align-items-center mt-5">
    <a href="{{ path('create_discount') }}" class="btn btn-primary">Créer un code promotionnel</a>
  </div>
{% endblock %}
